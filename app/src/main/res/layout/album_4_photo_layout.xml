<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/four_photo_first_pic"
        android:layout_width="241.33dp"
        android:layout_height="299.67dp"
        android:layout_centerInParent="true"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/four_photo_second_pic"
            android:layout_width="118.67dp"
            android:layout_height="99dp"
            android:layout_centerInParent="true"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:layout_marginTop="1dp"
        />
        <ImageView
            android:id="@+id/four_photo_third_pic"
            android:layout_width="118.67dp"
            android:layout_height="99dp"
            android:layout_centerInParent="true"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:layout_marginTop="1dp"
            />
        <ImageView
            android:id="@+id/four_photo_fourth_pic"
            android:layout_width="118.67dp"
            android:layout_height="99dp"
            android:layout_marginTop="1dp"
            android:layout_centerInParent="true"
            android:adjustViewBounds="true"
            android:scaleType="fitXY" />
    </LinearLayout>

</LinearLayout>