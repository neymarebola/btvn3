<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/multi_photo_first_pic"
            android:layout_width="179dp"
            android:layout_height="179dp"
            android:layout_centerInParent="true"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            />

        <ImageView
            android:id="@+id/multi_photo_second_pic"
            android:layout_width="179dp"
            android:layout_height="179dp"
            android:layout_centerInParent="true"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:layout_marginStart="1dp"
             />
    </LinearLayout>

    <LinearLayout
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/multi_photo_third_pic"
            android:layout_width="118.67dp"
            android:layout_height="118.67dp"
            android:clipToOutline="true"
            android:layout_centerInParent="true"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            />

        <ImageView
            android:id="@+id/multi_photo_fourth_pic"
            android:layout_width="118.67dp"
            android:layout_height="118.67dp"
            android:layout_marginStart="1dp"
            android:clipToOutline="true"
            android:layout_centerInParent="true"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
             />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/multi_photo_fifth_pic"
                android:layout_width="118.67dp"
                android:layout_height="118.67dp"
                android:layout_marginStart="1dp"
                android:clipToOutline="true"
                android:layout_centerInParent="true"
                android:adjustViewBounds="true"
                android:scaleType="fitXY" />

            <View
                android:layout_width="118.67dp"
                android:layout_height="118.67dp"
                android:background="#99000000" />

            <TextView
                android:id="@+id/txt_remaining_photo_number"
                android:layout_width="43dp"
                android:layout_height="32dp"
                android:layout_centerInParent="true"
                android:lineSpacingExtra="3sp"
                android:text="@string/some_id"
                android:textAppearance="@style/some_id" />
        </RelativeLayout>

    </LinearLayout>

</LinearLayout>