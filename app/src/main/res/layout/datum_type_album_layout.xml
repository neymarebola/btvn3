<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include layout="@layout/header_layout" />

        <TextView
            android:id="@+id/txt_status"
            android:layout_width="336dp"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:lineSpacingExtra="3sp"
            android:text="haha"
            android:textAppearance="@style/ta_th_ng_ng"
            android:translationY="-1.65sp" />


        <!-- hien thi mediaData -->
        <include layout="@layout/album_2_photo_layout"
            android:id="@+id/inc_album_2_photo_layout"
            android:visibility="gone"/>

        <include layout="@layout/album_3_photo_layout"
            android:id="@+id/inc_album_3_photo_layout"
            android:visibility="gone"/>

        <include layout="@layout/album_4_photo_layout"
            android:id="@+id/inc_album_4_photo_layout"
            android:visibility="gone"/>

        <include layout="@layout/album_5_photo_layout"
            android:id="@+id/inc_album_5_photo_layout"
            android:visibility="gone"/>

        <include layout="@layout/album_multiple_photo_layout"
            android:id="@+id/inc_album_multiple_photo_layout"
            android:visibility="gone"/>


        <include layout="@layout/footer_layout" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rcv_comment"
            android:layout_width="360dp"
            android:layout_height="wrap_content" />
        <include
            layout="@layout/write_comment_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="12dp" />
        <View
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:background="@drawable/divider"/>
    </LinearLayout>

</RelativeLayout>